<input type='submit' value='Log Out' class='button'>
</form>

<!-- SEARCH -->
<form method='POST' action='/search'>
  <input type="text" name="leader" value="Search">
</form>

<p> ********************My Profile *****************************</p>
<p><a href='http://localhost:9393/users/<%= @user.id %>/private_profile'> <%=@user.first_name %> <%=@user.last_name %></a></p>
<p>Username: <%=@user.user_name %></p>
<p><a href= 'http://localhost:9393/users/<%=@user.id%>/followers'>Followers: <%= @user.followers_count %></a></p>
